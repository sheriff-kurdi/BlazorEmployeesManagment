
@page "/EmployeesList"
@inject BlazorEmployeesManagment.Web.Services.EmployeesServices employeesService


<div class="container">
    <div class="row">
        <div class="card-deck">
            @if (Employees == null)
            {
                <div class="spinner"></div>
            }
            else
            {






                @foreach (var employee in Employees)
                {

                    <div class="col col-sm-12 col-lg-4 col-md-6">

                        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                            <div class="card-header">
                                <h1> @employee.FirstName @employee.LastName</h1>
                            </div>
                            <img height="200" class="card-img-top imageThumbnail" src="@employee.PhotoPath" />
                            <div class="card-footer text-center">
                                <a href="@($"EmployeeDetails/{employee.Id}")" class="btn btn-primary m-1">View</a>

                                <a href="#" class="btn btn-primary m-1">Edit</a>

                                <a href="#" class="btn btn-danger m-1">Delete</a>
                            </div>
                        </div>

                    </div>
                }
            }
        </div>

    </div>

</div>

@code {

    private IEnumerable<BlazorEmployeesManagment.Web.Models.Employee> Employees { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Employees = await employeesService.GetAll();
    }



}